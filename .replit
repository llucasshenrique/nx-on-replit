modules = ["nodejs-20", "web", "nodejs-22"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Dev Server"

[[workflows.workflow]]
name = "Dev Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pnpm install && pnpm nx run-many -t serve"
waitForPort = 4200

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 4200
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
run = ["pnpm", "install", "&&", "pnpm", "nx", "run-many", "-t", "serve", "start" ]
